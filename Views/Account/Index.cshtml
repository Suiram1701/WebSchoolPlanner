@inject IViewLocalizer _localizer;

@{
    ViewData["Title"] = _localizer["Title"];
}

<div>
    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="general-tab" data-bs-toggle="tab" data-bs-target="#general-tab-pane" type="button" role="tab" aria-controls="general-tab-pane" aria-selected="true">
                @_localizer["general"]
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="security-tab" data-bs-toggle="tab" data-bs-target="#security-tab-pane" type="button" role="tab" aria-controls="security-tab-pane">
                @_localizer["security"]
            </button>
        </li>
    </ul>
    <div class="tab-content" id="presentation">
        <div class="tab-pane fade show active" id="general-tab-pane" role="tabpanel" aria-labelledby="presentation-tab" tabindex="0">
            General
        </div>
        <div class="tab-pane fade" id="security-tab-pane" role="tabpanel" aria-labelledby="security-tab" tabindex="1">
            Security
        </div>
    </div>
</div>